<section class="menu-target1">
    <h2>
        <i class="fas fa-sort-numeric-down"></i> 
        Nombres
    </h2>

    <a class="btn-green btn-lg" 
        href="{{ url('number!create') }}">
        Nouveau Nombre
    </a>

    <table class="table">
        <tbody>

        {% for number in numbers %}
            <tr>
                <th>
                    Description #{{ number.number }}
                    <a class="btn-blue" 
                        href="{{ url('number!update', {'id': number.id}) }}"
                        title="Modifier le Nombre">
                        <i class="fas fa-pen-square fa-fw fa-lg"></i>
                    </a>
                    <a class="btn-red" 
                        href="{{ url('number!delete', {'id': number.id}) }}"
                        title="Supprimer le Nombre">
                        <i class="fas fa-times-circle fa-fw fa-lg"></i>
                    </a>
                </th>
            </tr>
            <tr>
                <td>{{ number.description }}</td>
            </tr>

        {% if number.lifePath %}
            <tr>
                <th>Chemin de Vie {{ number.number }}</th>
            </tr>
            <tr>
                <td>{{ number.lifePath }}</td>
            </tr>
        {% endif %}

        {% if number.expression %}
            <tr>
                <th>Nombre d'Expression {{ number.number }}</th>
            </tr>
            <tr>
                <td>{{ number.expression }}</td>
            </tr>
        {% endif %}

        {% if number.intimate %}
            <tr>
                <th>Nombre Intime {{ number.number }}</th>
            </tr>
            <tr>
                <td>{{ number.intimate }}</td>
            </tr>
        {% endif %}

        {% if number.realization %}
            <tr>
                <th>Nombre de Réalisation {{ number.number }}</th>
            </tr>
            <tr>
                <td>{{ number.realization }}</td>
            </tr>
        {% endif %}

        {% if number.day %}
            <tr>
                <th>Nombre du Jour {{ number.number }}</th>
            </tr>
            <tr>
                <td>{{ number.day }}</td>
            </tr>
        {% endif %}

        {% if number.goal %}
            <tr>
                <th>Nombre du But {{ number.number }}</th>
            </tr>
            <tr>
                <td>{{ number.goal }}</td>
            </tr>
        {% endif %}

        {% if number.personal %}
            <tr>
                <th>Nombre Personnel {{ number.number }}</th>
            </tr>
            <tr>
                <td>{{ number.personal }}</td>
            </tr>
        {% endif %}

        {% if number.hereditary %}
            <tr>
                <th>Nombre Héréditaire {{ number.number }}</th>
            </tr>
            <tr>
                <td>{{ number.hereditary }}</td>
            </tr>
        {% endif %}

        {% if number.power %}
            <tr>
                <th>Nombre de Pouvoir {{ number.number }}</th>
            </tr>
            <tr>
                <td>{{ number.power }}</td>
            </tr>
        {% endif %}

        {% if number.spiritual %}
            <tr>
                <th>Nombre Spirituel {{ number.number }}</th>
            </tr>
            <tr>
                <td>{{ number.spiritual }}</td>
            </tr>
        {% endif %}
    {% endfor %}
    
        </tbody>
    </table>
</section>
